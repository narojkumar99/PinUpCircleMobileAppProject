<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/ic_mobile_background"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:elevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_subscri_icon_back"
            tools:ignore="VectorDrawableCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/rectangle_mobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.pinupcircle.utility.customfonts.TextViewFontsMedium
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp"
            android:text="Subscriber's Registration"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.pinupcircle.utility.customfonts.EditTextFontsRegular
            android:id="@+id/editTextSubscriberName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textCapSentences"
            android:hint="@string/name"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.pinupcircle.utility.customfonts.EditTextFontsRegular
            android:id="@+id/editTextNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:inputType="textCapSentences"
            android:hint="@string/nick_name"
            android:gravity="center_horizontal"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSubscriberName" />

        <Button
            android:id="@+id/btnGO"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="22dp"
            android:text="GO"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:background="@drawable/register_active"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNickName" />

        <com.pinupcircle.utility.customfonts.TextViewFontsMedium
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Are you a Service Provider?"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGO" />

        <!--com.pinupcircle.utility.customfonts.TextViewFontsMedium
            android:id="@+id/registerYourService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_ground_register_service_provider"
            android:padding="10dp"
            android:text="Register Your Service"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView3">
            <com.pinupcircle.utility.customfonts.TextViewFontsMedium
                android:id="@+id/registerYourService"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/back_ground_register_service_provider"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_marginTop="28dp"
                android:text="Register Your Service"
                tools:ignore="MissingConstraints">
            </com.pinupcircle.utility.customfonts.TextViewFontsMedium>

        </RelativeLayout>



        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/buttom_backgound" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.pinupcircle.utils.RoundedImageView
        android:id="@+id/imgSubscriberUpload"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:background="@drawable/circle_green"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       android:src="@drawable/user_profile_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>