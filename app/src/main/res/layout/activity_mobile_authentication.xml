<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:alpha="0.9"
        android:background="#ECEBEB"
        android:orientation="vertical">
        <com.pinupcircle.utility.customfonts.TextViewFontsMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#434343"
            android:text="Enter Mobile Number"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/blue_border_rounded_cornwe">

            <!-- INPUT -->
            <com.pinupcircle.utility.customfonts.EditTextFontsRegular
                android:id="@+id/edTMobileNumberAuthentication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/mobile_number"
                android:maxLines="1"
                android:inputType="phone"
                android:paddingStart="14dp"
                android:paddingLeft="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:maxLength="10"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp" />
            <!-- ICON -->

        </RelativeLayout>
        <FrameLayout
            android:id="@+id/mobileVerifyAuthentication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/imgAuthentication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/next"
                android:onClick="onMobileAuthenticationClick"
                android:contentDescription="TODO" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:background="@drawable/buttom_backgound"/>

    </LinearLayout>
</RelativeLayout>