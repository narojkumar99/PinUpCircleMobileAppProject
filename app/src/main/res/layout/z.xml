<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_mobile_background"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_subscri_icon_back"
                android:scaleType="fitXY">

            </ImageView>
        </FrameLayout>
        <ImageView
            android:id="@+id/imgSubscriberUpload"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="TODO"
            android:layout_below="@+id/frameLayout"
            android:src="@drawable/user_profile_pic"
            android:layout_marginRight="38dp"
            android:elevation="12dp"
            />

<!--
        <RelativeLayout
            android:layout_below="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:layout_marginTop="0dp">
        </RelativeLayout>
-->

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout"
            android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginTop="0dp"

            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rectangle_mobile">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#335EA9"
                    android:layout_gravity="center_horizontal|left"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="14dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="@string/subscriber_s_registration">

                </TextView>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="42dp">
                    <com.pinupcircle.utility.customfonts.EditTextFontsRegular

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Name"
                        android:maxLines="1"
                        android:inputType="textCapSentences"
                        android:paddingStart="14dp"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"

                        android:gravity="center_horizontal"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="16sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="42dp">
                    <com.pinupcircle.utility.customfonts.EditTextFontsRegular

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nick_name"
                        android:maxLines="1"
                        android:inputType="textCapSentences"
                        android:paddingStart="14dp"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:maxLength="10"
                        android:text=""
                        android:gravity="center_horizontal"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="16sp" />
                </RelativeLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_active"
                    android:layout_gravity="center_horizontal"
                     android:gravity="center"
                    android:layout_marginTop="20dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:background="@drawable/register_in_active"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:elevation="8dp"
                        android:text="Go"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginTop="28dp"
                    android:layout_gravity="center"
                    android:text="Are you a Service Provider?">
                </TextView>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/back_ground_register_service_provider"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:text="Register Your Service">
                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:background="@drawable/buttom_backgound"/>

    </LinearLayout>
</LinearLayout>